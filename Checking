#include<iostream>
using namespace std;
int main(){
string s;
cin>>s;
int i;
int p1,p2,p3,p4,p5;


for( i=s.size()-1;i>=0;i--){
    if(s[i]=='h'){

     p1=i;
    }
}
for( i=s.size()-1;i>p1;i--){
    if(s[i]=='e'){

     p2=i;
    }
}
for( i=s.size()-1;i>p2;i--){
    if(s[i]=='l'){

     p3=i;
    }
}
for( i=s.size()-1;i>p3;i--){
    if(s[i]=='l'){

     p4=i;
    }
}

for( i=s.size()-1;i>p4;i--){
    if(s[i]=='o'){

     p5=i;
    }
}



if(p1<p2&&p2<p3&&p3<p4&&p4<p5){
  cout<<"YES"<<endl;
}
else{
    cout<<"NO"<<endl;
}

return 0;
}
